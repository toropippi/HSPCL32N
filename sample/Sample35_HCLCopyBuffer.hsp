#include "hspcl32n.as"
	clinit
	
	n=1024*1024*32
	clmem_A=clCreateBuffer(n*4)
	clmem_B=clCreateBuffer(n*4)
	
	pattern=12345
	offset=0
	size=n*4//sizeはbyteで指定すること
	clFillBuffer_i32 clmem_A,pattern,offset,size
	//これでAにデータがはいった

	//これでBにコピー
	clCopyBuffer clmem_B,clmem_A,n*4,0,0

	//結果表示
	pos 0,0
	mes "clmem_Aの中身"
		repeat 17
		mes clReadIndex_i32(clmem_A,cnt)
		loop

	pos 320,0
	mes "clmem_Bの中身"
		repeat 17
		mes clReadIndex_i32(clmem_B,cnt)
		loop